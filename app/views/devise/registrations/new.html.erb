<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <div class="well">
        <h2>Registration</h2>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal", :role => "form", :multipart => true}) do |f| %>
          <%= devise_error_messages! %>

        <div class="form-group">
          <label for="inputText" class="col-lg-3 control-label"><%= f.label :username %></label>
          <div class="col-lg-8">
            <%= f.text_field :username, :type => "text", :class => "form-control", :placeholder => "Artem Pecherin"%>
          </div>
        </div>

          <div class="form-group">
            <label for="inputEmail1" class="col-lg-3 control-label"><%= f.label :email %></label>
            <div class="col-lg-8">
              <%= f.email_field :email, :autofocus => true, :type => "email", :class => "form-control", :id => "inputEmail1", :placeholder => "example@example.com"%>
            </div>
          </div>

          <div class="form-group">
            <label for="inputTimeZone" class="col-lg-3 control-label">Time Zone</label>
            <div class="col-lg-8">
              <%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.us_zones)%>
            </div>
          </div>

          <div class="form-group">
            <label for="inputPassword1" class="col-lg-3 control-label">Password</label>
            <div class="col-lg-8">
              <%= f.password_field :password, :type => "password", :class => "form-control", :id => "inputPassword1"%>
            </div>
          </div>

          <div class="form-group">
            <label for="inputPassword1" class="col-lg-3 control-label">Repeat password</label>
            <div class="col-lg-8">
              <%= f.password_field :password_confirmation, :type => "password", :class => "form-control", :id => "inputPassword1"%>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-offset-9 col-lg-10">
              <div><%= f.submit "Registrate!", :class => "btn btn-success" %></div>
            </div>
          </div>
        <% end %>

        <%= link_to "Sign in", new_session_path(resource_name), :class => "btn btn-primary" %><br /><br />
      </div>
    </div>
  </div>
</div>